<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
  <div>
    <%= form.label :major, "Select Major", class: "form-label" %>
    <%= form.select :major, options_for_select(Student::VALID_MAJORS), { prompt: "-- Select a Major --" }, name: 'search[major]', class: "form-control" %>
  </div>
  <div>
    <%= label_tag 'Graduation Date' %>
    <%= select_tag 'search[before_after]', options_for_select([['Before', 'before'], ['After', 'after']], params.dig(:search, :before_after)) %>
    <%= date_field_tag 'search[grad_date]', params.dig(:search, :grad_date) || Date.today.strftime('%Y-%m-%d'), class: "form-control" %>
      </div>

    <%= form.submit "Search", class: "btn btn-primary" %>

<% end %>
