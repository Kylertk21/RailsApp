<h1>New student</h1>

<%= render "form", student: @student %>

<% if @student.errors.any? %>
  <div id="error">
    <h2><%= pluralize(@student.errors.count, "error") %>
    <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to students", students_path %>
</div>


